@model GymApp.Models.Service
@{
    ViewData["Title"] = "Yeni Hizmet";
}

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>@ViewData["Title"]</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Örn: Personal Training" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ServiceType" class="form-label fw-semibold"></label>
                        <select asp-for="ServiceType" class="form-select">
                            <option value="Fitness">Fitness</option>
                            <option value="Yoga">Yoga</option>
                            <option value="Pilates">Pilates</option>
                            <option value="Personal Training">Personal Training</option>
                            <option value="Kardiyo">Kardiyo</option>
                            <option value="Grup Dersi">Grup Dersi</option>
                        </select>
                        <span asp-validation-for="ServiceType" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-semibold"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Hizmet açýklamasý..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DurationMinutes" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <input asp-for="DurationMinutes" class="form-control" type="number" min="15" step="15" placeholder="60" />
                                <span class="input-group-text">dakika</span>
                            </div>
                            <span asp-validation-for="DurationMinutes" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" placeholder="250" />
                                <span class="input-group-text">?</span>
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label">Aktif</label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Geri
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-1"></i> Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
