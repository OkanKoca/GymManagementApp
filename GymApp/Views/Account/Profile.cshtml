@model GymApp.Models.Member
@{
    ViewData["Title"] = "Profilim";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row g-4">
            <!-- Profil Kartý -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-lg h-100">
                    <div class="card-body text-center p-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-4 mb-3">
                            <i class="bi bi-person-circle text-primary" style="font-size: 4rem;"></i>
                        </div>
                        <h4 class="fw-bold">@Model.FullName</h4>
                        <p class="text-muted mb-2">@Model.Email</p>

                        @if (!string.IsNullOrEmpty(Model.FitnessGoal))
                        {
                            <span class="badge bg-success mb-3">?? @Model.FitnessGoal</span>
                        }

                        @if (Model.Height.HasValue && Model.Weight.HasValue && Model.Height > 0)
                        {
                            var bmi = Model.Weight.Value / Math.Pow(Model.Height.Value / 100, 2);
                            var bmiCategory = bmi < 18.5 ? "Zayýf" : bmi < 25 ? "Normal" : bmi < 30 ? "Fazla Kilolu" : "Obez";
                            var bmiColorClass = bmi < 18.5 ? "warning" : bmi < 25 ? "success" : bmi < 30 ? "warning" : "danger";
                            <div class="bg-@bmiColorClass bg-opacity-10 rounded p-3 mt-3">
                                <small class="text-muted">BMI</small>
                                <h3 class="fw-bold text-@bmiColorClass mb-0">@bmi.ToString("F1")</h3>
                                <span class="badge bg-@bmiColorClass">@bmiCategory</span>
                            </div>
                        }

                        <hr class="my-3" />

                        <div class="row text-center">
                            @if (Model.Age.HasValue)
                            {
                                <div class="col-4">
                                    <small class="text-muted d-block">Yaþ</small>
                                    <strong>@Model.Age</strong>
                                </div>
                            }
                            @if (Model.Height.HasValue)
                            {
                                <div class="col-4">
                                    <small class="text-muted d-block">Boy</small>
                                    <strong>@Model.Height cm</strong>
                                </div>
                            }
                            @if (Model.Weight.HasValue)
                            {
                                <div class="col-4">
                                    <small class="text-muted d-block">Kilo</small>
                                    <strong>@Model.Weight kg</strong>
                                </div>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(Model.BodyType))
                        {
                            <div class="mt-3">
                                <small class="text-muted d-block">Vücut Tipi</small>
                                <span class="badge bg-info">@Model.BodyType</span>
                            </div>
                        }

                        <div class="mt-4">
                            <small class="text-muted">
                                <i class="bi bi-calendar3 me-1"></i>Üyelik: @Model.CreatedAt.ToString("dd MMMM yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Düzenleme Formu -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-lg">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Profili Düzenle</h5>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="UpdateProfile" method="post">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">E-posta</label>
                                    <input type="text" class="form-control bg-light" value="@Model.Email" disabled />
                                    <small class="text-muted">E-posta deðiþtirilemez</small>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="FullName" class="form-label"></label>
                                    <input asp-for="FullName" class="form-control" />
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                </div>
                            </div>

                            <h6 class="text-muted mt-4 mb-3"><i class="bi bi-heart-pulse me-2"></i>Fiziksel Bilgiler</h6>

                            <div class="row g-3">
                                <div class="col-md-3 col-6">
                                    <label asp-for="Age" class="form-label"></label>
                                    <input asp-for="Age" class="form-control" type="number" />
                                    <span asp-validation-for="Age" class="text-danger small"></span>
                                </div>
                                <div class="col-md-3 col-6">
                                    <label asp-for="Gender" class="form-label"></label>
                                    <select asp-for="Gender" class="form-select">
                                        <option value="">Seçin</option>
                                        <option value="Erkek" selected="@(Model.Gender == "Erkek")">Erkek</option>
                                        <option value="Kadýn" selected="@(Model.Gender == "Kadýn")">Kadýn</option>
                                    </select>
                                </div>
                                <div class="col-md-3 col-6">
                                    <label asp-for="Height" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Height" class="form-control" type="number" step="0.1" />
                                        <span class="input-group-text">cm</span>
                                    </div>
                                    <span asp-validation-for="Height" class="text-danger small"></span>
                                </div>
                                <div class="col-md-3 col-6">
                                    <label asp-for="Weight" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Weight" class="form-control" type="number" step="0.1" />
                                        <span class="input-group-text">kg</span>
                                    </div>
                                    <span asp-validation-for="Weight" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label asp-for="FitnessGoal" class="form-label"></label>
                                    <select asp-for="FitnessGoal" class="form-select">
                                        <option value="">Hedef Seçin...</option>
                                        <option value="Kilo vermek">?? Kilo vermek</option>
                                        <option value="Kas yapmak">?? Kas yapmak</option>
                                        <option value="Fit kalmak">?? Fit kalmak</option>
                                        <option value="Güçlenmek">??? Güçlenmek</option>
                                        <option value="Esneklik kazanmak">?? Esneklik kazanmak</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="BodyType" class="form-label"></label>
                                    <select asp-for="BodyType" class="form-select">
                                        <option value="">Vücut Tipi Seçin...</option>
                                        <option value="Ektomorf">Ektomorf (Ýnce yapýlý)</option>
                                        <option value="Mezomorf">Mezomorf (Atletik)</option>
                                        <option value="Endomorf">Endomorf (Geniþ yapýlý)</option>
                                    </select>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save me-1"></i> Kaydet
                                </button>
                                <a asp-controller="AI" asp-action="Recommendations" class="btn btn-success">
                                    <i class="bi bi-robot me-1"></i> AI Öneriler Al
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hýzlý Eriþim Kartlarý -->
        <div class="row mt-4 g-3">
            <div class="col-md-3 col-6">
                <div class="card border-0 shadow-sm h-100 card-hover">
                    <div class="card-body text-center p-3">
                        <i class="bi bi-calendar-check text-primary" style="font-size: 2rem;"></i>
                        <h6 class="mt-2 mb-1">Randevularým</h6>
                        <a asp-controller="Appointment" asp-action="Index" class="stretched-link"></a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card border-0 shadow-sm h-100 card-hover">
                    <div class="card-body text-center p-3">
                        <i class="bi bi-plus-circle text-success" style="font-size: 2rem;"></i>
                        <h6 class="mt-2 mb-1">Yeni Randevu</h6>
                        <a asp-controller="Appointment" asp-action="Create" class="stretched-link"></a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card border-0 shadow-sm h-100 card-hover">
                    <div class="card-body text-center p-3">
                        <i class="bi bi-person-badge text-info" style="font-size: 2rem;"></i>
                        <h6 class="mt-2 mb-1">Eðitmenler</h6>
                        <a asp-controller="Trainer" asp-action="Index" class="stretched-link"></a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card border-0 shadow-sm h-100 card-hover">
                    <div class="card-body text-center p-3">
                        <i class="bi bi-building text-warning" style="font-size: 2rem;"></i>
                        <h6 class="mt-2 mb-1">Salonlar</h6>
                        <a asp-controller="Gym" asp-action="Index" class="stretched-link"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-hover:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
