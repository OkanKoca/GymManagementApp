@model GymApp.Models.Gym
@{
    ViewData["Title"] = "Spor Salonu Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow">
<div class="card-header bg-primary text-white">
      <h5 class="mb-0"><i class="bi bi-pencil me-2"></i>@ViewData["Title"]</h5>
    </div>
 <div class="card-body">
<form asp-action="Edit" method="post">
          <input type="hidden" asp-for="Id" />
 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  
       <div class="mb-3">
<label asp-for="Name" class="form-label"></label>
         <input asp-for="Name" class="form-control" />
<span asp-validation-for="Name" class="text-danger"></span>
   </div>

     <div class="mb-3">
  <label asp-for="Address" class="form-label"></label>
      <input asp-for="Address" class="form-control" />
         <span asp-validation-for="Address" class="text-danger"></span>
  </div>
     
       <div class="mb-3">
   <label asp-for="WorkingHours" class="form-label"></label>
<input asp-for="WorkingHours" class="form-control" />
 <span asp-validation-for="WorkingHours" class="text-danger"></span>
            </div>
    
 <div class="d-flex justify-content-between">
     <a asp-action="Index" class="btn btn-secondary">
       <i class="bi bi-arrow-left me-1"></i> İptal
</a>
       <button type="submit" class="btn btn-success">
 <i class="bi bi-save me-1"></i> Kaydet
    </button>
  </div>
 </form>
       </div>
 </div>
    </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
