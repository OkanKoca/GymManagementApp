<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymApp.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark">
     <div class="container">
   <a class="navbar-brand" asp-controller="Home" asp-action="Index">
     <i class="bi bi-heart-pulse"></i> GymForce
       </a>
     <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
                </button>
          <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
              <li class="nav-item">
             <a class="nav-link" asp-controller="Home" asp-action="Index">
         <i class="bi bi-house me-1"></i> Ana Sayfa
       </a>
             </li>
      <li class="nav-item">
            <a class="nav-link" asp-controller="Gym" asp-action="Index">
    <i class="bi bi-building me-1"></i> Salonlar
           </a>
     </li>
          <li class="nav-item">
                <a class="nav-link" asp-controller="Trainer" asp-action="Index">
           <i class="bi bi-person-badge me-1"></i> Eğitmenler
     </a>
        </li>
           <li class="nav-item">
                  <a class="nav-link" asp-controller="Service" asp-action="Index">
          <i class="bi bi-clipboard-check me-1"></i> Hizmetler
   </a>
   </li>
      @if (User.Identity?.IsAuthenticated == true)
      {
               <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
       <i class="bi bi-calendar-check me-1"></i> Randevularım
              </a>
            <ul class="dropdown-menu">
 <li><a class="dropdown-item" asp-controller="Appointment" asp-action="Index"><i class="bi bi-calendar-check me-2"></i>Aktif Randevularım</a></li>
       <li><a class="dropdown-item" asp-controller="Appointment" asp-action="History"><i class="bi bi-clock-history me-2"></i>Geçmiş Randevularım</a></li>
      <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" asp-controller="Appointment" asp-action="Create"><i class="bi bi-plus-circle me-2"></i>Yeni Randevu</a></li>
  </ul>
  </li>
    <li class="nav-item">
             <a class="nav-link" asp-controller="AI" asp-action="Recommendations">
            <i class="bi bi-robot me-1"></i> AI Öneriler
         </a>
  </li>
      }
@if (User.IsInRole("Admin"))
     {
            <li class="nav-item dropdown">
       <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
   <i class="bi bi-gear me-1"></i> Yönetim
             </a>
       <ul class="dropdown-menu">
     <li><a class="dropdown-item" asp-controller="Appointment" asp-action="All"><i class="bi bi-calendar-week me-2"></i>Tüm Randevular</a></li>
               <li><a class="dropdown-item" asp-controller="TrainerAvailability" asp-action="Index"><i class="bi bi-clock me-2"></i>Müsaitlik Yönetimi</a></li>
        </ul>
      </li>
                }
    </ul>
    <ul class="navbar-nav">
    @if (User.Identity?.IsAuthenticated == true)
        {
   <li class="nav-item dropdown">
   <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                 <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
       </a>
   <ul class="dropdown-menu dropdown-menu-end">
      <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person me-2"></i>Profilim</a></li>
       <li><hr class="dropdown-divider"></li>
         <li>
    <form asp-controller="Account" asp-action="Logout" method="post">
     <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap</button>
          </form>
             </li>
       </ul>
     </li>
        }
            else
   {
        <li class="nav-item">
     <a class="nav-link" asp-controller="Account" asp-action="Login">
    <i class="bi bi-box-arrow-in-right me-1"></i> Giriş
          </a>
        </li>
        <li class="nav-item">
 <a class="btn btn-success btn-sm ms-2" asp-controller="Account" asp-action="Register">
  <i class="bi bi-person-plus me-1"></i> Kayıt Ol
  </a>
   </li>
        }
   </ul>
        </div>
       </div>
        </nav>
    </header>

    <div class="container mt-4 fade-in">
        <main role="main" class="pb-5">
         @RenderBody()
        </main>
    </div>

    <footer class="py-4 mt-5">
        <div class="container">
<div class="row align-items-center">
     <div class="col-md-6">
        <h5 class="mb-2"><i class="bi bi-heart-pulse"></i> GymForce</h5>
       <p class="text-muted mb-0 small">Premium Spor Salonu Yönetim Sistemi</p>
            </div>
  <div class="col-md-6 text-md-end mt-3 mt-md-0">
     <p class="text-muted mb-0 small">&copy; 2025 GymForce. Tüm hakları saklıdır.</p>
                  <p class="text-muted mb-0 small mt-1">
 <i class="bi bi-lightning-charge text-warning"></i> Powered by AI & .NET 8
      </p>
       </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/gymforce.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
