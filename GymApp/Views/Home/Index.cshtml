@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<div class="py-5 mb-5 rounded-4" style="margin-top: -24px; margin-left: -12px; margin-right: -12px; background: linear-gradient(135deg, var(--gym-surface), var(--gym-surface-elevated)); border-bottom: 2px solid var(--gym-accent); box-shadow: var(--gym-shadow-lg);">
    <div class="container">
        <div class="row align-items-center py-5">
            <div class="col-lg-7">
                <div class="mb-3">
                    <span class="badge" style="background: linear-gradient(135deg, var(--gym-accent), var(--gym-accent-dark)); padding: 0.5rem 1rem; font-size: 0.9rem;">
                        <i class="bi bi-lightning-charge me-1"></i>Premium Gym Management
                    </span>
                </div>
                <h1 class="fw-bold mb-4" style="font-size: 3.5rem; line-height: 1.2; letter-spacing: -0.03em;">
                    <i class="bi bi-heart-pulse" style="color: var(--gym-accent);"></i> GymForce
                    <div class="mt-2" style="font-size: 2rem; color: var(--gym-text-secondary);">Gücünü Ortaya Çıkar</div>
                </h1>
                <p class="lead mb-4" style="color: var(--gym-text-secondary); font-size: 1.2rem;">
                    Premium spor salonlarını keşfedin, uzman eğitmenlerle tanışın ve kolayca randevu oluşturun.
                    <strong style="color: var(--gym-accent);">Yapay zeka destekli</strong> kişiselleştirilmiş fitness önerileri ile hedeflerinize ulaşın!
                </p>
                <div class="d-flex flex-wrap gap-3">
                    @if (User.Identity?.IsAuthenticated != true)
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-success btn-lg px-4 shadow">
                            <i class="bi bi-person-plus me-2"></i>Ücretsiz Başla
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg px-4">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Appointment" asp-action="Create" class="btn btn-success btn-lg px-4 shadow">
                            <i class="bi bi-calendar-plus me-2"></i>Randevu Al
                        </a>
                        <a asp-controller="AI" asp-action="Recommendations" class="btn btn-warning btn-lg px-4 shadow">
                            <i class="bi bi-robot me-2"></i>AI Öneriler
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-5 text-center d-none d-lg-block">
                <div class="position-relative">
                    <div class="icon-box mx-auto" style="width: 200px; height: 200px; font-size: 5rem;">
                        <i class="bi bi-trophy"></i>
                    </div>
                    <div class="position-absolute top-0 end-0 pulse">
                        <div class="rounded-circle p-3" style="background: var(--gym-surface-elevated);">
                            <i class="bi bi-lightning-charge" style="color: var(--gym-accent); font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Özellikler -->
<div class="container mb-5">
    <div class="text-center mb-5">
        <span class="badge bg-primary px-4 py-2 mb-3" style="font-size: 0.9rem; letter-spacing: 0.1em;">ÖZELLİKLER</span>
        <h2 class="fw-bold display-6">Neden GymForce?</h2>
        <p class="text-muted lead">Fitness yolculuğunuzda size yardımcı olacak özellikler</p>
    </div>
    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 text-center hover-card">
                <div class="card-body p-4">
                    <div class="icon-box mx-auto mb-3" style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--gym-primary), var(--gym-primary-dark));">
                        <i class="bi bi-building" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3">Premium Salonlar</h5>
                    <p class="card-text text-muted small">
                        En iyi spor salonlarını keşfedin, çalışma saatlerini ve sunulan hizmetleri inceleyin.
                    </p>
                    <a asp-controller="Gym" asp-action="Index" class="btn btn-sm btn-outline-primary mt-2">
                        Keşfet <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 text-center hover-card">
                <div class="card-body p-4">
                    <div class="icon-box mx-auto mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-person-badge" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3">Uzman Eğitmenler</h5>
                    <p class="card-text text-muted small">
                        Alanında uzman eğitmenlerle tanışın ve müsaitlik durumlarına göre randevu alın.
                    </p>
                    <a asp-controller="Trainer" asp-action="Index" class="btn btn-sm btn-outline-success mt-2">
                        Keşfet <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 text-center hover-card">
                <div class="card-body p-4">
                    <div class="icon-box mx-auto mb-3" style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--gym-warning), var(--gym-warning-dark));">
                        <i class="bi bi-robot" style="font-size: 2rem; color: var(--gym-bg);"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3">AI Desteği</h5>
                    <p class="card-text text-muted small">
                        Boy, kilo ve hedeflerinize göre kişiselleştirilmiş egzersiz ve diyet önerileri alın.
                    </p>
                    <a asp-controller="AI" asp-action="Recommendations" class="btn btn-sm btn-outline-warning mt-2">
                        Dene <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 text-center hover-card">
                <div class="card-body p-4">
                    <div class="icon-box mx-auto mb-3" style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--gym-info), #2563EB);">
                        <i class="bi bi-calendar-check" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3">Kolay Randevu</h5>
                    <p class="card-text text-muted small">
                        Online randevu sistemi ile istediğiniz eğitmenden kolayca randevu alın.
                    </p>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-controller="Appointment" asp-action="Create" class="btn btn-sm btn-outline-info mt-2">
                            Randevu Al <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-sm btn-outline-info mt-2">
                            Üye Ol <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Nasıl Çalışır -->
<div class="py-5 mb-5 rounded-4" style="margin-left: -12px; margin-right: -12px; background: var(--gym-surface); border: 1px solid rgba(255, 255, 255, 0.05);">
    <div class="container">
        <div class="text-center mb-5">
            <span class="badge bg-success px-4 py-2 mb-3" style="font-size: 0.9rem; letter-spacing: 0.1em;">BAŞLANGIÇ REHBERI</span>
            <h2 class="fw-bold display-6">Nasıl Çalışır?</h2>
            <p class="text-muted">3 basit adımda fitness yolculuğunuza başlayın</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center">
                    <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-3 shadow" style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--gym-primary), var(--gym-primary-dark));">
                        <span class="fs-2 fw-bold">1</span>
                    </div>
                    <h5 class="fw-bold mb-3">Ücretsiz Üye Olun</h5>
                    <p class="text-muted">Hızlıca kayıt olun ve profilinizi oluşturun. Boy, kilo ve hedeflerinizi girin.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-3 shadow" style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--gym-accent), var(--gym-accent-dark));">
                        <span class="fs-2 fw-bold" style="color: var(--gym-bg);">2</span>
                    </div>
                    <h5 class="fw-bold mb-3">Eğitmen Seçin</h5>
                    <p class="text-muted">Uzman eğitmenlerimizi inceleyin, deneyimlerini görün ve size uygun olanı seçin.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-3 shadow" style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--gym-warning), var(--gym-warning-dark));">
                        <span class="fs-2 fw-bold" style="color: var(--gym-bg);">3</span>
                    </div>
                    <h5 class="fw-bold mb-3">Randevu Alın</h5>
                    <p class="text-muted">Uygun tarih ve saati seçerek randevunuzu hemen oluşturun ve başlayın!</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- İstatistikler -->
<div class="py-5 rounded-4 mb-5" style="margin-left: -12px; margin-right: -12px; background: linear-gradient(135deg, rgba(0, 230, 118, 0.05), rgba(33, 150, 243, 0.05)); border: 1px solid rgba(0, 230, 118, 0.2);">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-6 col-md-3">
                <div class="p-3">
                    <div class="icon-box mx-auto mb-3" style="width: 70px; height: 70px; background: linear-gradient(135deg, var(--gym-primary), var(--gym-primary-dark)); font-size: 1.8rem;">
                        <i class="bi bi-building"></i>
                    </div>
                    <h2 class="fw-bold mb-0 counter" style="color: var(--gym-accent); font-size: 2.5rem;">10+</h2>
                    <p class="text-muted mb-0">Spor Salonu</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="p-3">
                    <div class="icon-box mx-auto mb-3" style="width: 70px; height: 70px; font-size: 1.8rem;">
                        <i class="bi bi-person-badge"></i>
                    </div>
                    <h2 class="fw-bold mb-0 counter" style="color: var(--gym-accent); font-size: 2.5rem;">25+</h2>
                    <p class="text-muted mb-0">Uzman Eğitmen</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="p-3">
                    <div class="icon-box mx-auto mb-3" style="width: 70px; height: 70px; background: linear-gradient(135deg, var(--gym-info), #2563EB); font-size: 1.8rem;">
                        <i class="bi bi-people"></i>
                    </div>
                    <h2 class="fw-bold mb-0 counter" style="color: var(--gym-accent); font-size: 2.5rem;">500+</h2>
                    <p class="text-muted mb-0">Mutlu Üye</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="p-3">
                    <div class="icon-box mx-auto mb-3" style="width: 70px; height: 70px; background: linear-gradient(135deg, var(--gym-warning), var(--gym-warning-dark)); font-size: 1.8rem;">
                        <i class="bi bi-calendar-check" style="color: var(--gym-bg);"></i>
                    </div>
                    <h2 class="fw-bold mb-0 counter" style="color: var(--gym-accent); font-size: 2.5rem;">1K+</h2>
                    <p class="text-muted mb-0">Tamamlanan Randevu</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- AI Önerileri Tanıtım -->
<div class="container mb-5">
    <div class="row align-items-center g-5">
        <div class="col-lg-6">
            <span class="badge bg-warning px-4 py-2 mb-3" style="font-size: 0.9rem;">
                <i class="bi bi-stars me-1"></i>YENİ ÖZELLİK
            </span>
            <h2 class="fw-bold display-6 mb-4">Yapay Zeka Destekli<br />Fitness Önerileri</h2>
            <p class="text-muted lead mb-4">
                Kişisel verilerinize göre özelleştirilmiş egzersiz ve beslenme programları alın.
                BMI hesaplama, kalori ihtiyacı ve vücut tipinize göre akıllı öneriler.
            </p>
            <ul class="list-unstyled mb-4">
                <li class="mb-3 d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-3" style="font-size: 1.5rem; color: var(--gym-accent);"></i>
                    <span>BMI ve vücut analizi</span>
                </li>
                <li class="mb-3 d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-3" style="font-size: 1.5rem; color: var(--gym-accent);"></i>
                    <span>Kalori ihtiyacı hesaplama</span>
                </li>
                <li class="mb-3 d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-3" style="font-size: 1.5rem; color: var(--gym-accent);"></i>
                    <span>Kişiselleştirilmiş egzersiz önerileri</span>
                </li>
                <li class="mb-3 d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-3" style="font-size: 1.5rem; color: var(--gym-accent);"></i>
                    <span>Beslenme tavsiyeleri</span>
                </li>
            </ul>
            <a asp-controller="AI" asp-action="Recommendations" class="btn btn-warning btn-lg px-5 shadow">
                <i class="bi bi-robot me-2"></i>Hemen Dene
            </a>
        </div>
        <div class="col-lg-6">
            <div class="position-relative">
                <div class="rounded-4 p-5 text-center" style="background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(217, 119, 6, 0.1)); border: 2px solid rgba(245, 158, 11, 0.3);">
                    <i class="bi bi-robot" style="font-size: 12rem; color: var(--gym-warning);"></i>
                    <div class="position-absolute top-0 end-0 m-4">
                        <span class="badge bg-success p-3 pulse" style="font-size: 1rem;">
                            <i class="bi bi-gift me-1"></i>Ücretsiz
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
@if (User.Identity?.IsAuthenticated != true)
{
    <div class="py-5 text-center rounded-4" style="margin-left: -12px; margin-right: -12px; margin-bottom: -16px; background: linear-gradient(135deg, var(--gym-accent), var(--gym-accent-dark)); box-shadow: var(--gym-shadow-lg);">
        <div class="container py-5">
            <h3 class="fw-bold display-6 mb-3" style="color: var(--gym-bg);">Gücünü Keşfet, Hemen Başla!</h3>
            <p class="lead mb-4" style="color: var(--gym-bg); opacity: 0.9;">Ücretsiz üye olun ve fitness yolculuğunuza bugün başlayın.</p>
            <a asp-controller="Account" asp-action="Register" class="btn btn-lg px-5 shadow-lg" style="background: var(--gym-bg); color: var(--gym-accent); font-weight: 700;">
                <i class="bi bi-person-plus me-2"></i>Ücretsiz Kayıt Ol
            </a>
        </div>
    </div>
}
