@model GymApp.Models.Trainer
@{
    ViewData["Title"] = "Eðitmen Sil";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Silme Onayý</h5>
            </div>
            <div class="card-body">
                <p>Aþaðýdaki eðitmeni silmek istediðinize emin misiniz?</p>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Ad Soyad</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>
                    <dt class="col-sm-4">Uzmanlýk</dt>
                    <dd class="col-sm-8">@Model.Expertise</dd>
                    <dt class="col-sm-4">Salon</dt>
                    <dd class="col-sm-8">@Model.Gym?.Name</dd>
                    <dt class="col-sm-4">Sunduðu Hizmetler</dt>
                    <dd class="col-sm-8">
                        @if (Model.TrainerServices != null && Model.TrainerServices.Any())
                        {
                            <div class="d-flex flex-wrap gap-1">
                                @foreach (var ts in Model.TrainerServices)
                                {
                                    <span class="badge bg-info">@ts.Service?.Name</span>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">Hizmet atanmamýþ</span>
                        }
                    </dd>
                </dl>
                <div class="alert alert-warning">
                    <i class="bi bi-info-circle me-2"></i>Bu iþlem geri alýnamaz!
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Evet, Sil
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i> Ýptal
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
